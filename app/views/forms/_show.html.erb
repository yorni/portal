<div class="container-fluid">
  <div class="row">
    <div>
      <h4><span id="notice" class="label label-default"><%= pcNotice %></span></h4>
    </div>
    <div class='text-center'>
      <h1>
        <%= "#{$gcHeaderShow} #{pcTableName}" %>
      </h1>
    </div>
  </div>
  <br>

  <div class="row">
    <table class="table table-striped table-hover">
      <tbody>

      <tr>
        <td class="col-lg-2 col-md-3"><strong>ID:</strong></td>
        <td class="col-lg-10 col-md-9"><%= poController.id %></td>
      </tr>

      <% paRow.each_index do |i| %>
          <tr>
            <td class="col-lg-2 col-md-3"><strong><%= paRow[i][0] %>:</strong></td>
            <td class="col-lg-10 col-md-9">
              <%= eval('(defined?(poController.'+paRow[i][1]+') ? poController.'+paRow[i][1]+' : "" )') %>
            </td>
          </tr>
      <% end %>

      <tr>
        <td class="col-lg-2 col-md-3"><strong>Дата створення:</strong></td>
        <td class="col-lg-10 col-md-9"><%= poController.created_at %></td>
      </tr>

      <tr>
        <td class="col-lg-2 col-md-3"><strong>Дата оновлення:</strong></td>
        <td class="col-lg-10 col-md-9"><%= poController.updated_at %></td>
      </tr>

      </tbody>
    </table>
  </div>
  <br>

  <div class="row">
    <div class="container text-center">
      <%= link_to pcLink_path_edit, :class => 'btn btn-warning' do %>
          <span class='glyphicon glyphicon-pencil' aria-hidden="true"></span> Редактировать
      <% end %>

      <%= link_to pcLink_path_back, :class => 'btn btn-default' do %>
          <span class='glyphicon glyphicon-arrow-left' aria-hidden="true"></span> Назад
      <% end %>
    </div>
  </div>
</div>