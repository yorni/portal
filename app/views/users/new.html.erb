<%= form_for(@user) do |f| %>

    <div style="background-color: #666666;" class="container-table">
      <div class="vertical-center-row">
        <div class="container">
          <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info" >
              <div class="panel-heading">
                <div class="panel-title">Створення користувача</div>
              </div>

              <div style="padding-top:30px" class="panel-body" >


                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                <form id="loginform" class="form-horizontal" role="form">

                  <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <%= f.text_field :username, class: 'form-control', autofocus: true, placeholder: "Введіть логін" %>
                  </div>

                  <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>

                    <%= f.password_field :password, class: 'form-control', autocomplete: "off", placeholder: "Введіть пароль"%>
                  </div>

                  <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off", placeholder: "Повторіть пароль"%>
                  </div>
                 
                  <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <%= f.text_field :institution_id, class: 'form-control', autofocus: true, placeholder: "Введіть установу" %>
                  </div>
                  
                    
                  
                <div style="margin-bottom: 25px" class="input-group">
                   <div class="panel-title">Адміністратор</div>
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <%= f.check_box :is_admin, class: 'form-control', autofocus: true%>
                  </div>
                  
                  
                 
                     <div style="margin-bottom: 25px" class="input-group">
                     <div class="panel-title">Постачальник</div>
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <%= f.check_box :is_supplier, class: 'form-control', autofocus: true %>
                  </div>
                  
                     <div style="margin-bottom: 25px" class="input-group">
                     
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <%= f.text_field :supplier_id, class: 'form-control', autofocus: true, placeholder: "Введіть постачальника" %>
                  </div>
                  
                  
                  
                  
                  
                  
                  
                  

                  <div class="form-inline">
                    <%= f.submit "Натисність для створення користувача", class: 'btn btn-primary' %>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>

<% end %>

